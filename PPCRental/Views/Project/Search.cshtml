        <form action="@Url.Action("Search","Project")">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        <select name="ptypeID" id="input" class="form-control">
                            <option value="0" style="font-weight:bold">Property Type</option>
                            @{
                                foreach (var item in property_type)
                                {
                                    <option value="@item.ID">@item.Description</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-3">
                        <select name="districtID" id="input" class="form-control">
                            <option value="0" style="font-weight:bold">District</option>
                            @{
                                foreach (var item in district)
                                {
                                    <option value="@item.ID">@item.DistrictName</option>
                                }
                            }
                        </select>
                    </div>
                    
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <!-- Latest news -->
        <div class="posts-wrap">

            <h3 class="component-ttl"><span> Search </span></h3>

            <div class="posts-list">
                @foreach (var item in project)
                {
                    <div class="posts-i">
                        <a class="posts-i-img" href="~/Project/Detail/@item.ID">
                            <span style="background: url(/Asset/User/Images/@item.Avatar)"></span>

                        </a>
                        <time class="posts-i-date" datetime="2016-11-09 00:00:00"><span>27</span> Jan</time>
                        <div class="posts-i-info">
                            <p>
                                <h1 class=" posts-i-ttl">@*<a href="blog.html" class="posts-i-ctg">*@ @item.PropertyName @*</a>*@ </h1>
                                <h3 class="posts-i-ttl"> </h3>
                                <a href="~/Project/Detail/@item.ID">@item.Content.Substring(0, 100)</a>

                            <p><a href="~/Project/Detail/@item.ID" class="btn btn-default" role="button">Detail</a></p>

