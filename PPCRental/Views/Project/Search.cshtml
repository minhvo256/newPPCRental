
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Share/_Layout.cshtml";
    var project = ViewData["project"] as List<PPCRental.Models.PROPERTY>;
    var property_type = ViewData["property_type"] as List<PPCRental.Models.PROPERTY_TYPE>;
    var district = ViewData["district"] as List<PPCRental.Models.DISTRICT>;
}


